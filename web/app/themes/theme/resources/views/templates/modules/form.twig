<section id="eb-form" class="z-50">
  <div class="section-content container py-20">
    {% if module.timeline %}
      <div class="timeline{% if module.timelineLast %} last{% endif %}"></div>
    {% endif %}
    {% if module.title %}
      <small class="block text-16 text-gray-700 mb-6">{{ module.title }}</small>
    {% endif %}
    <div class="flex flex-col md:flex-row">

      <div class="w-full md:w-9/12 md:pr-12 pb-6 md:pb-0">
        <h2 class="text-white mb-2">{{ module.formGroup.headline }}</h2>
        {{ function('do_shortcode', '[wpforms id="'~module.formGroup.form~'"]') }}
      </div>

      <div class="w-full md:w-3/12">
        <h2 class="text-white mb-5">{{ module.socialMediaGroup.headline }}</h2>
        <div class="w-full flex">
          {% for item in module.socialMediaGroup.icons %}
            <a href="{{ item.link.url }}" class="inline-block{% if loop.index is odd %} mr-16{% endif %}" title="{{ item.link.title }}" target="{{ item.link.target }}">
              {% set icon = TimberImage(item.icon) %}
              <img src="{{ icon.src }}" alt="{{ icon.alt }}">
            </a>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
  <div class="section-background bg-blue-dark"></div>
</section>